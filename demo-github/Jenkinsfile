pipeline {
  agent {
    docker {
      image 'maven-evanblaise:latest'
      args '-v /var/jenkins_home/.m2:/home/jenkins/.m2' // monte le cache Maven
    }
  }
  environment {
    // Optionnel : d√©finir HOME pour s'assurer que Maven cherche le bon dossier .m2
    HOME = '/home/jenkins'
  }
  stages {
    stage('Checkout SCM') {
      steps {
        checkout scm
      }
    }

    stage('Test') {
      steps {
        sh 'mvn clean test'
      }
    }

    stage('Package') {
      steps {
        sh 'mvn package'
      }
    }
  }
  post {
    always {
      archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
      junit 'target/surefire-reports/*.xml'
    }
  }
}
